<div class="row">
    <div class="col-8">
        <h1>Reporte de ventas</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Forma</th>
                    <% usuarios.forEach(usuario => { %>
                        <th><%=usuario.nombre %></th>
                    <% }); %>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% formasPago.forEach(forma => { %>
                    <tr>
                        <td><%=forma.nombreFormaPago %></td>
                        <% ventas.forEach(venta => { %>
                            <% if(venta.metodoPagoSeleccionado == forma.nombreFormaPago){ %>
                                <td><%=venta.total %></td>
                            <% } %>
                        <% }); %>
                    </tr>
                <% }); %>
                
                <tr class="table-warning">
                    <td style="font-weight: bold;">Total</td>
                    <td colspan="5"></td>
                    <td>125233</td>
                </tr>
            </tbody>

